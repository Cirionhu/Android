<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="@color/main_color">

    <!-- Genre Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/red"/>

    <!-- Action -->
    <TextView
        android:id="@+id/textViewAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"/>

    <CheckBox
        android:id="@+id/checkBoxAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="8dp" />

    <!-- Adventure -->
    <TextView
        android:id="@+id/textViewAdventure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adventure"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxAdventure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAction"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxAdventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAction"
        android:layout_marginTop="8dp" />

    <!-- Animation -->
    <TextView
        android:id="@+id/textViewAnimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxAnimation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdventure"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdventure"
        android:layout_marginTop="8dp" />

    <!-- Comedy -->
    <TextView
        android:id="@+id/textViewComedy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comedy"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxComedy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnimation"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxComedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnimation"
        android:layout_marginTop="8dp" />

    <!-- Crime -->
    <TextView
        android:id="@+id/textViewCrime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crime"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxCrime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComedy"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxCrime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComedy"
        android:layout_marginTop="8dp" />

    <!-- Drama -->
    <TextView
        android:id="@+id/textViewDrama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Drama"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxDrama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCrime"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxDrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCrime"
        android:layout_marginTop="8dp" />

    <!-- Family -->
    <TextView
        android:id="@+id/textViewFamily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Family"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxFamily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDrama"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDrama"
        android:layout_marginTop="8dp" />

    <!-- Fantasy -->
    <TextView
        android:id="@+id/textViewFantasy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fantasy"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxFantasy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFamily"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxFantasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFamily"
        android:layout_marginTop="8dp" />

    <!-- Horror -->
    <TextView
        android:id="@+id/textViewHorror"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horror"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxHorror"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFantasy"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxHorror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFantasy"
        android:layout_marginTop="8dp" />

    <!-- Romance -->
    <TextView
        android:id="@+id/textViewRomance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Romance"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxRomance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHorror"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxRomance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHorror"
        android:layout_marginTop="8dp" />

    <!-- Year Selection Spinner -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release date"
        app:layout_constraintBottom_toTopOf="@+id/yearSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRomance"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/red" />

    <!-- Submit Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/yearSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        style="@android:style/Widget.Button"
        android:background="@drawable/red_button_background"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
